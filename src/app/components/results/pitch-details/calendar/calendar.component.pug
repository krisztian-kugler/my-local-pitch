.header
  i.fas.fa-chevron-left((click)='prevMonth()')
  .current-date {{ months[currentMonth] }} {{ currentYear }}
  i.fas.fa-chevron-right((click)='nextMonth()')
.week
  .weekday(*ngFor='let day of days; let i = index') {{ day }}
.grid
  .week(*ngFor='let week of weeksInMonth; let i = index')
    mlp-calendar-day.day(*ngFor='let day of days; let j = index', [currentDate]='{currentYear: currentYear, currentMonth: currentMonth}', [content]='dayList[j + i * 7]', (click)='submitDate(dayList[j + i * 7])')
